{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "dub",
            "run": false,
            "problemMatcher": [
                "$dmd"
            ],
            "group": "build"
        },
        {
            "label": "build for debugging",
            "type": "shell",
            "command": "dub build -a=x86_64 -b=debug -c=application",
            "group": "build"
        },
        {
            "label": "run",
            "type": "dub",
            "run": true,
            "problemMatcher": [
                "$dmd"
            ],
            "group": "build"
        }
    ]
}